<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/layout">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:columnCount="2"
        android:rowCount="6"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentRight="false"
        android:layout_alignWithParentIfMissing="false"
        android:id="@+id/gridLayout">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/i1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:clickable="true"
            android:onClick="click"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@mipmap/qm"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:visibility="visible" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/i2"
            android:layout_alignBottom="@+id/i1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/i5"
            android:src="@mipmap/qm"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="click"
            android:visibility="visible" />

        <ImageView

            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/i3"
            android:layout_below="@+id/i1"
            android:layout_toRightOf="@+id/i1"
            android:layout_toEndOf="@+id/i1"
            android:src="@mipmap/qm"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:onClick="click"
            android:visibility="visible" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/i4"
            android:layout_alignBottom="@+id/i3"
            android:layout_alignRight="@+id/i2"
            android:layout_alignEnd="@+id/i2"
            android:src="@mipmap/qm"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="click"
            android:visibility="visible" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/i5"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/i3"
            android:src="@mipmap/qm"
            android:layout_toEndOf="@+id/i3"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:onClick="click"
            android:visibility="visible" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/i6"
            android:layout_alignTop="@+id/i5"
            android:layout_alignRight="@+id/i4"
            android:src="@mipmap/qm"
            android:layout_alignEnd="@+id/i4"
            android:layout_row="2"
            android:layout_column="1"
            android:onClick="click"
            android:visibility="visible" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/i7"
            android:layout_below="@+id/i5"
            android:layout_toRightOf="@+id/i5"
            android:layout_toEndOf="@+id/i5"
            android:src="@mipmap/qm"
            android:layout_row="3"
            android:layout_column="0"
            android:onClick="click"
            android:visibility="visible" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/i8"
            android:layout_alignTop="@+id/i7"
            android:src="@mipmap/qm"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_row="3"
            android:layout_column="1"
            android:onClick="click"
            android:visibility="visible" />

    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Score: 1000"
        android:id="@+id/scoreText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="High Score"
        android:id="@+id/highScoreView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:visibility="gone" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Game"
        android:id="@+id/newGameButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:onClick="startGame" />

</RelativeLayout>
